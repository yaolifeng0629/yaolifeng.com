{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "checkJs": true,

        /* Bundled projects */
        "lib": ["dom", "dom.iterable", "ES2022"],
        "noEmit": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "preserve",
        "plugins": [{ "name": "next" }],
        "incremental": true,

        /* Path Aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "next.config.mjs",

        "**/*.ts",
        "**/*.tsx",

        ".eslintrc.cjs",
        ".prettierrc.cjs",
        ".commitlintrc.cjs",
        "postcss.config.cjs",
        "next-sitemap.config.cjs"
, "src/data/posts/parsed/blogs.js"    ],
    "exclude": ["node_modules"]
}
